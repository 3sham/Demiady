@model IEnumerable<Demiady.Retainer>

@{
    ViewBag.Title = "قائمة العرابين";
}

<h2>قائمة العرابين</h2>

<p>
    @Html.ActionLink("تسجيل عربون جديد", "Create")
</p>
<table class="table table-bordered table-striped text-center">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Ret_Date)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Client_Name)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Client_Phone)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Product.Prod_Name)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Prod_Price)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Prod_Count)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Ret_Value)
        </th>
        <th class="text-center">
            الباقي
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Due_date)
        </th>

        <th class="text-center">التحكم</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ret_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client_Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Prod_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prod_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prod_Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ret_Value)
        </td>
        <td>
            @{ var reuslt = item.Prod_Price - item.Ret_Value;}

            @reuslt
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Due_date)
        </td>

        <td>
            @Html.ActionLink("تعديل", "Edit", new { id = item.Ret_ID }) |

            @Html.ActionLink("ازالة", "Delete", new { id = item.Ret_ID })
        </td>
    </tr>
}

</table>
