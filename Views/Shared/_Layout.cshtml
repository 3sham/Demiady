        <link href="~/Content/bootstrap-rtl.css" rel="stylesheet" />
        <link href="~/Content/Site.css" rel="stylesheet" />
        <link href="~/Content/css/select2.min.css" rel="stylesheet" />*@

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/helloworld")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top newnav">
        <div class="container">
            <div class="navbar-header navbar-right">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("الدمياطي", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("الحسابات الشهرية", "Index", "Accounts")</li>
                    <li>@Html.ActionLink("التوريدات", "Index", "Transfers")</li>
